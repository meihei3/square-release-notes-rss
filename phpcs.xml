<?xml version="1.0"?>
<ruleset name="ProjectRules">
    <description>Custom coding standard</description>

    <!-- display progress -->
    <arg value="p"/>
    <!-- use colors in output -->
    <arg name="colors"/>

    <!-- PSR-12 を適用 -->
    <rule ref="PSR12"/>

    <!-- テストの長い行を許可 -->
    <rule ref="Generic.Files.LineLength">
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>

    <!-- 対象ディレクトリを指定 -->
    <file>src</file>
    <file>config</file>
    <file>tests</file>
</ruleset>
